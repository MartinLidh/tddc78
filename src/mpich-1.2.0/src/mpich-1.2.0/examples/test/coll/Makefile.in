clean:
	@-/bin/rm -f *.o *~ PI* $(EXECS) core *.out coll.diff *.trace mpif.h \
		${srcdir}/*.o

.c.o:
	$(CC) $(CFLAGS) -c $<
.f.o:
	$(F77) $(FFLAGS) $(F77_OPTFLAGS) -c $<
